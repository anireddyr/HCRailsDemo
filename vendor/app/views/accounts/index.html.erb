<p><h1>Listing Accounts from Salesforce Org</h1>
<h2>Last synch with Salesforce = <%= @triggerlog.created_at %></h2></p>

<%= link_to 'Create New Account', new_account_path %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
		<!--<td><%= account.id %></td>-->
		<td><%= account.name %></td>
		<td><a href=<%= account.website %>><%= account.website %></a></td>
		<td><%= account.billingcity %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


